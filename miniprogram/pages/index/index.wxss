.search_box{
  width: 90%;
  height: 400rpx;
  background-color: #ffffff;
  position: fixed;
  top: 70rpx;
  z-index: 999;
}

.show_search_img{
  width: 100rpx;
  height: 100rpx;
}

.swiper_box{
    width: 100%;
    margin-top:-220rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
    /* background-color: #41924B; */
}

.swiper{
  width: 90%;
  height: 300rpx;
  border-radius: 80rpx;
}
.swiper_img{
  width: 100%;
  height: 300rpx;
  border-radius: 60rpx;
}
.active {
  opacity: 1;
  z-index: 10;
  height: 360rpx;
  top: 7%;
  transition: all .2s ease-in 0s;
}

/* show */
.show{
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  margin-top: 10rpx;
  display: flex;
  width: 100%;
}
.show_title{
  width: 96%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-weight: 600;
}
.show_box{
  display: flex;
  width: 96%;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  
}

.show_le{
  width: 48%;
  height: 600rpx;
  background-color: rgb(125,162,194);
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 5rpx  5rpx 10rpx #888;
}

.show_rt{
    width: 48%;
    height: 400rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.show_rt_up{
  width: 100%;
  height: 192rpx;
  background-color: pink;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 5rpx  5rpx 10rpx #888;
}
.show_rt_down{
  width: 100%;
  height: 192rpx;
  background-color: yellow;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 5rpx  5rpx 10rpx #888;
}

.show_le_img,.show_rt_up_img,.show_rt_down_img{
  width: 100%;
  height: 100%;
}
.show_le_img{
  height: 600rpx;
}

/* 商品列表 */
.shopping{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  margin-top: 40rpx;
}
.shopping_title{
  width: 96%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-weight: 600;
}

.shopping_total{
  width: 96%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;

  /* 换行 */
  flex-wrap: wrap;
}
.shopping_detail{
  width:300rpx;
  padding: 20rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  box-shadow: 5rpx 5rpx 10rpx #888888;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:flex-start;

  margin-bottom: 30rpx;
}
.shopping_img{
  width: 100%;
  height: 350rpx;
  border-radius: 10rpx;
}
.shopping_name{
  padding: 10rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content:flex-start; 
  margin-top: 20rpx;
  /* 省略号 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.shopping_price{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
  margin-top: 30rpx;

}
.index_big_img{
  width: 100%;
  height: 400rpx;
}
.index_big_img_title{
  margin-top: 60rpx;
  margin-left: 10rpx;

  font-weight: 600;
  flex-direction: row;
  align-items: center;
}